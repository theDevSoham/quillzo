generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model posts {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model users {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  surname  String
  email    String @unique
  password String?
}
